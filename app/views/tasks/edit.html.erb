<div class="container">
  <%= form_for(@task) do |f| %>
  <div class="form-group">
    <strong><%= f.label :title %></strong>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <strong><%= f.label :details %></strong>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-check">
      <%= f.check_box :completed, class: 'form-check-input' %>
      <%= f.label :completed, "Done", class: 'form-check-label' %></span>
  </div>

    <div class="input"><%= f.submit class: 'btn btn-primary' %></div>
  <% end %>

  <div class="border-top">
    <div class="back-link">
      <i class="fas fa-redo"></i><%= link_to "Back to list", tasks_path %>
    </div>
  </div>
</div>
